[flake8]
max-line-length = 120
extend-select = ABS101
ignore = E203,W503,E402,E501,F401,F841,F541,E711,E266,E722,E902,E741,E712,E731,F403,F405,F811,F901,W293
exclude =
    emulations/,
    tests/,
    .git,
    __pycache__,
    .venv,
    venv/,
    dist/,
    build/

# Per-file ignores to allow _version imports
per-file-ignores =
    sml/__init__.py:ABS101
